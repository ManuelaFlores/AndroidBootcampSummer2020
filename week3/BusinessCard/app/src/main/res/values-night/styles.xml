<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/colorNightDark</item>
    </style>

    <style name="BusinessCard.MainTitleTextView" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">@dimen/main_title_text_size</item>
        <item name="android:maxLines">4</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginBottom">@dimen/margin_one_and_half</item>
    </style>

    <style name="BusinessCard.MainBottomAppBar" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="fabAlignmentMode">end</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="BusinessCard.MainFloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="layout_anchor">@id/mainBottomAppBar</item>
        <item name="tint">?attr/colorControlNormal</item>
        <item name="android:src">@drawable/ic_autorenew</item>
        <item name="fabCradleMargin">@dimen/fab_cradle_margin_size</item>
    </style>

</resources>