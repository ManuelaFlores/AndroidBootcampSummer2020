<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BusinessCard.MainCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/mainCardViewBackground</item>
        <item name="cardCornerRadius">@dimen/main_card_corner_radius</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
    </style>

    <style name="BusinessCard.MainCardViewStyleLandscape" parent="BusinessCard.MainCardViewStyle">
        <item name="android:layout_gravity">center|center_vertical</item>
    </style>

    <style name="BusinessCard.MainTextView" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:layout_marginBottom">@dimen/margin_half</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="BusinessCard.MainTextViewLandscape" parent="BusinessCard.MainTextView">
        <item name="android:layout_marginStart">@dimen/margin_standard</item>
        <item name="android:layout_marginEnd">@dimen/margin_standard</item>
        <item name="android:layout_marginBottom">@dimen/margin_half</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>

    <style name="BusinessCard.MainTitleTextView" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">@dimen/main_title_text_size</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginBottom">@dimen/margin_one_and_half</item>
    </style>

    <style name="BusinessCard.MainTitleTextViewLandscape" parent="BusinessCard.MainTitleTextView">
        <item name="android:layout_marginStart">@dimen/margin_standard</item>
        <item name="android:layout_marginEnd">@dimen/margin_standard</item>
    </style>

</resources>